@model IEnumerable<Ui.Web.Models.UserViewModel>

@{
    ViewBag.Title = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Management</h2>

@using (@Html.BeginForm("UserManagement", "User", FormMethod.Get))
{
    <p>
        Search: @Html.TextBox("search") <br />
        <input type="submit" value="Search user" />
    </p>
}

<table>
    <thead>
        <tr>
            <th>First Name:</th>
            <th>Last Name:</th>
            <th>E-Mail:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>

                <td>@Html.ActionLink("Edit", "Edit", "User", new { userId = user.UserId }, null)</td>
                <td> | </td>
                <td>@Html.ActionLink("Delete", "Delete", "User", new { userId = user.UserId }, null)</td>

            </tr>
        }
    </tbody>

</table>

<div>
    @Html.ActionLink("Back to Thread List", "Index", "Threads")
</div>