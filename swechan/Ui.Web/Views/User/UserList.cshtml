@model BusinessLogic.UserRepository.UserList

@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User</h2>

<table>
    <thead>
        <tr>
            <th>First Name:</th>
            <th>Last Name:</th>
            <th>E-Mail:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>

                <td>@Html.ActionLink("Edit", "Edit", "Users", new { userId = user.UserId }, null)</td>
                <td> | </td>
                <td>@Html.ActionLink("Delete", "Delete", "Users", new { userId = user.UserId }, null)</td>

            </tr>
        }
    </tbody>

</table>