@model BusinessLogic.ThreadEdit


@{
    ViewBag.Title = "ThreadEditView";
}

<h2>Edit @Model.Thread.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Thread</legend>

        @Html.HiddenFor(model => model.Thread.ThreadId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Thread.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Thread.Title)
            @Html.ValidationMessageFor(model => model.Thread.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Thread.CreatedAt)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Thread.CreatedAt)
            @Html.ValidationMessageFor(model => model.Thread.CreatedAt)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Thread.Posts)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Thread.Posts)
            @Html.ValidationMessageFor(model => model.Thread.Posts)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List of Threads", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

